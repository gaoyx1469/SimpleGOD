<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>SimpleGOD</display-name>
  <servlet>
    <description>演示读取配置文件</description>
    <servlet-name>GetPropertiesServlet</servlet-name>
    <servlet-class>top.trial.servlet.GetPropertiesServlet</servlet-class>
  </servlet>
  <servlet>
    <description>演示GenericServlet使用</description>
    <servlet-name>GenericServletImpl</servlet-name>
    <servlet-class>top.trial.servlet.GenericServletImpl</servlet-class>
  </servlet>
  <servlet>
    <description>演示中文输出</description>
    <servlet-name>SysoChineseServletDemo</servlet-name>
    <servlet-class>top.trial.encode.SysoChineseServletDemo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SysoChineseServletDemo</servlet-name>
    <url-pattern>/SysoChineseServletDemo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GenericServletImpl</servlet-name>
    <url-pattern>/GenericServletImpl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetPropertiesServlet</servlet-name>
    <url-pattern>/GetPropertiesServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>